{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": [
      "@cloudflare/workers-types",
      "@cloudflare/vitest-pool-workers"
    ],
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@dotdo/functions": ["../../packages/functions-sdk/src/index.ts"]
    }
  },
  "include": [
    "*.ts",
    "**/*.ts"
  ]
}
